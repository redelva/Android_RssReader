<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/fragment_blog_list_layout"    
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <TextView 
        	android:text="@string/empty"
        	
	        android:textSize="26.0sp" android:textColor="@color/white"        
			android:gravity="center_vertical" android:id="@+id/bloglist_channel_title"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:background="#009788" android:paddingTop="10.0dip" 
			android:paddingLeft="20.0dip" android:paddingBottom="10.0dip"/>
	
    <!-- 
    <com.lgq.rssreader.controls.XListView   	
	    android:id="@+id/blog_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"	    
	    tools:context=".BlogContentFragment"/>
	     -->
	     
	     <LinearLayout     
    android:layout_width="fill_parent"
	android:gravity="center"  	
	android:orientation="vertical"
	android:layout_height="fill_parent">
     <com.lgq.rssreader.controls.SwipeListView
            android:id="@+id/blog_list"
            android:listSelector="#00000000"
            android:layout_width="match_parent"
	    	android:layout_height="match_parent"
            swipe:swipeFrontView="@+id/front"
            swipe:swipeAutoClose = "false"
            swipe:swipeBackView="@+id/back"
            swipe:swipeActionLeft="reveal"
            swipe:swipeActionRight="reveal"
            swipe:swipeDrawableChecked="@drawable/choice_selected"
            swipe:swipeDrawableUnchecked="@drawable/choice_unselected"
            swipe:swipeCloseAllItemsWhenMoveList="true"
            swipe:swipeMode="both"
            swipe:swipeOpenOnLongPress="false"
            swipe:swipeOffsetLeft = "280dp"
            swipe:swipeOffsetRight = "280dp"
            swipe:swipeAutoCloseThreshold = "0.3"
            />
     </LinearLayout>     
</LinearLayout>